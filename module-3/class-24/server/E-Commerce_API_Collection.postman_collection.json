  "item": [
    {
      "name": "Authentication",
      "description": "User authentication endpoints (Signup and Login)",
      "item": [
        {
          "name": "Sign Up",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('userId', jsonData.user._id);",
                  "    pm.test('User created successfully', function() {",
                  "        pm.expect(jsonData.message).to.equal('User created successfully');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Ahmed Ali\",\n  \"age\": 25,\n  \"email\": \"ahmed@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"gender\": \"Male\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/signup",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "signup"]
            },
            "description": "Register a new user account"
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.test('Login successful', function() {",
                  "        pm.expect(jsonData.message).to.equal('Login successful');",
                  "    });",
                  "    pm.test('Response has user', function() {",
                  "        pm.expect(jsonData.user).to.exist;",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"ahmed@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "description": "Authenticate user and receive JWT token in cookies"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Products",
      "description": "Product management endpoints (CRUD operations)",
      "item": [
        {
          "name": "Get All Products",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.test('Products fetched successfully', function() {",
                  "        pm.expect(jsonData.message).to.equal('Products fetched successfully');",
                  "    });",
                  "    pm.test('Response has products array', function() {",
                  "        pm.expect(Array.isArray(jsonData.products)).to.be.true;",
                  "    });",
                  "    if (jsonData.products.length > 0) {",
                  "        pm.environment.set('productId', jsonData.products[0]._id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products/get-all-products",
              "host": ["{{baseUrl}}"],
              "path": ["products", "get-all-products"]
            },
            "description": "Fetch all products from the database"
